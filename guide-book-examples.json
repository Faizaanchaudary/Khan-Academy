  "postman_instructions": {
    "create_guide_book": {
      "method": "POST",
      "url": "http://localhost:5000/api/branch/guide-book",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer YOUR_TOKEN_HERE"
      },
      "body": "Copy the example_guide_book object above and replace YOUR_BRANCH_ID_HERE with actual branch ID"
    },
